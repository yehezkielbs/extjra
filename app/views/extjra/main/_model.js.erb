Ext.define('Extjra.model.<%= @abstract_model.model %>', {
    extend: 'Ext.data.Model',

    fields: [
        <% columns = @abstract_model.columns %>
        <% columns.each do |column| %>
            '<%= column.name %>',
        <% end %>

        <% @abstract_model.belongs_to_associations.each do |association| %>
        {
            name: '<%= association.name %>_name',
            mapping: '<%= association.name %>.name',
            persist: false
        },
        <% end %>
    ]
});