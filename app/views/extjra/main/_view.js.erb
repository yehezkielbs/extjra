Ext.define('Extjra.view.<%= @resources %>', {
    extend: 'Ext.grid.Panel',
    alias: 'widget.<%= @resources %>',

    title: '<%= @resources %>',
    store: '<%= @resources %>',

    initComponent: function() {
        var theGrid = this;
        var rowEditor = Ext.create('Ext.grid.plugin.RowEditing');
        this.plugins = [rowEditor];

        this.dockedItems = [
            {
                xtype: 'toolbar',
                dock: 'top',
                items: [
                    {
                        text: 'Add',
                        //iconCls: 'icon-add',
                        handler: function() {
                            // empty record
                            theGrid.store.insert(0, new Extjra.model.<%= @model_name %>());
                            rowEditor.startEdit(0, 1);
                        }
                    },
                    '-',
                    {
                        text: 'Edit',
                        handler: function() {
                            var selection = theGrid.getView().getSelectionModel().getSelection()[0];
                            rowEditor.startEdit(selection.index, 1);
                        }
                    },
                    '-',
                    {
                        text: 'Delete',
                        //iconCls: 'icon-delete',
                        //disabled: true,
                        handler: function() {
                            var selection = theGrid.getView().getSelectionModel().getSelection()[0];
                            if (selection) {
                                theGrid.store.remove(selection);
                            }
                        }
                    },
                    '-',
                    {
                        text: 'Save',
                        handler: function() {
                            theGrid.store.sync();
                        }
                    }
                ]
            },
            {
                xtype: 'pagingtoolbar',
                dock: 'bottom',
                store: '<%= @resources %>',
                displayInfo: true,
                displayMsg: 'Displaying {0} - {1} of {2}',
                emptyMsg: 'Nothing to display'
            }
        ];


        this.callParent(arguments);
    },

    //iconCls: 'icon-user',
    columns: [
        <% @model.columns.each_with_index do |column, index| %>
        {
            <% association = @model.reflect_on_association(column.name.gsub(/_id$/, '').to_sym) %>
            <% if association && association.macro == :belongs_to %>
            field:  {
                xtype: 'combobox',
                store: '<%= association.name.to_s.pluralize %>',
                valueField: 'id',
                displayField: 'name',
                forceSelection: true,
                queryMode: 'local'
            },
            listeners: {
                beforerender: function () {
                    Ext.getStore('<%= association.name.to_s.pluralize %>').load();
                }
            },
            xtype:'templatecolumn', tpl:'{<%= association.name %>_name}',
            <% else %>
            field: {
                xtype: 'textfield'
            },
            <% end %>
            dataIndex: '<%= column.name %>',
            text: '<%= column.name.titleize %>',

            sortable: true
        }<% unless index == @model.columns.length %>,
        <% end %>
        <% end %>
    ]
});
