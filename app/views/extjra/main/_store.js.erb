Ext.define('Extjra.store.<%= @resources %>', {
    extend: 'Ext.data.Store',

    autoLoad: false,
    autoSync: false,
    pageSize: 25,
    model: 'Extjra.model.<%= @model_name %>',
    proxy: {
        type: 'rest',
        url: '/api/<%= @resources %>',
        format: 'json',
        extraParams: { include: 'associations' },
        reader: {
            type: 'json',
            root: '<%= @resources %>',
            successProperty: 'success',
            totalProperty: 'total',
            messageProperty: 'message'
        },
        writer: {
            type: 'json',
            encode: false
        }
    }
});
